<div class="container mt-7">
    <div class="row">
        <div class="col-12 offset-0">
            <div class="card">
                <!-- Card header -->
                <div class="card-header text-center">
                    <%= t('surveys.check_your_survey') %>
                </div>
                <!--Card content-->
                <div class="card-body">
                    <div id="accordion" role="tablist">
                        <div class="card card-collapse">
                            <div class="" role="tab" id="survey-form">
                                <h5 class="m-0 px-2">
                                    <a data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed" style="color: rgb(156, 39, 176);">
                                         <%= t('surveys.edit') %>
                                        <i class="material-icons">keyboard_arrow_down</i>
                                    </a>
                                </h5>
                            </div>
                            <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="survey-form" data-parent="#accordion" style="">
                                <div class="card-body">
                                    <%= render 'surveys/form', survey: @survey %>
                                </div>
                            </div>
                        </div>
                        <div class="card card-collapse mt-3">
                            <div class="" role="tab" id="call-for-idea-form">
                                <h5 class="m-0 px-2">
                                    <a class="" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo" style="color: rgb(156, 39, 176);">
                                         <%= t('surveys.add_question') %>
                                        <i class="material-icons">keyboard_arrow_down</i>
                                    </a>
                                </h5>
                            </div>
                            <div id="collapseTwo" class="collapse show" role="tabpanel" aria-labelledby="call-for-idea-form" data-parent="#accordion" style="">
                                <section class="container">
                                    <%= render 'questions/new', question: Question.new %>
                                    <section id="questions-list">
                                        <%= render 'questions/index', questions: @survey.questions %>
                                    </section>
                                </section>
                            </div>
                        </div>
                    </div>
                    <section id="call_for_ideas">
                    </section>
                    <div class="row">
                        <div class="col">
                            <div class="input-group-btn">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" name="" id="fake-ready-btn" class="form-check-input">
                                        <%= t('tags.labels.ready') %>
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <button id="fake-update-btn" class="btn btn-md float-right">
                                <%= t('tags.buttons.save_changes') %></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
getReady();
</script>
<style type="text/css">
.remove-option {
    cursor: pointer;
}
</style>
<script type="text/javascript">
function createOption(question_id, name) {
    $auth_token = $(`input[name="authenticity_token"]`).val();
    $.ajax({
        url: '/options',
        type: 'POST',
        dataType: 'script',
        data: {
            authenticity_token: $auth_token,
            'option[question_id]': question_id,
            'option[name]': name
        }
    });
}
</script>

<%= render 'shared/nota-bene' %>
<div class="row makeTop scroll-here" scroll-to="50">
    <div class="col-12 offset-0">
        <div class="card pb-2 pt-1">
            <div class="container mt-7">
                <div class="row">
                    <div class="col-12 offset-0">
                        <div class="">
                            <!-- Card header -->
                            <div class="card-header text-center">
                                <%= t('projects.check_your_project') %>
                            </div>
                            <!--Card content-->
                            <div class="card-body">
                                <div id="accordion" role="tablist">
                                    <div class="card card-collapse">
                                        <div class="" role="tab" id="project-form">
                                            <h5 class="m-0 px-2">
                                                <a data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed" style="color: rgb(156, 39, 176);">
                                                    <%= t('projects.edit') %>
                                                    <i class="material-icons">keyboard_arrow_down</i>
                                                </a>
                                            </h5>
                                        </div>
                                        <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="project-form" data-parent="#accordion" style="">
                                            <div class="card-body">
                                                <%= render 'projects/form', project: @project %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card card-collapse mt-3">
                                        <div class="" role="tab" id="call-for-idea-form">
                                            <h5 class="m-0 px-2">
                                                <a class="" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo" style="color: rgb(156, 39, 176);">
                                                    <%= t('projects.add') %>
                                                    <i class="material-icons">keyboard_arrow_down</i>
                                                </a>
                                            </h5>
                                        </div>
                                        <div id="collapseTwo" class="collapse show" role="tabpanel" aria-labelledby="call-for-idea-form" data-parent="#accordion" style="">
                                            <div class="card-body">
                                                <script type="text/javascript">
                                                getCallForIdea(<%= @project.id %>);
                                                </script>
                                                <%= render 'call_for_ideas/new', project: @project, call_for_idea: CallForIdea.new %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card card-collapse mt-3">
                                        <div class="" role="tab" id="call-for-idea-form">
                                            <h5 class="m-0 px-2">
                                                <a class="" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree" style="color: rgb(156, 39, 176);">
                                                    <%= t('call_for_idea.title') %>
                                                    <i class="material-icons">keyboard_arrow_down</i>
                                                </a>
                                            </h5>
                                        </div>
                                        <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="call-for-idea-form" data-parent="#accordion" style="">
                                            <section id="call_for_ideas">
                                            </section>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group-btn">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="checkbox" name="" id="fake-ready-btn" checked="<%= @project.ready? ? true : false %>" class="form-check-input">
                                                <%= t('tags.labels.ready') %>
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                    <button id="fake-btn" class="btn btn-md">
                                        <%= t('tags.buttons.save_changes') %></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%= render 'shared/tinymce-editor', textarea: "textarea#project_description", menubar: "file insert" %>
<script type="text/javascript">
$('.file-upload-content').show();
$('.image-upload-wrap').hide();
getReady();
</script>
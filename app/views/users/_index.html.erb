<table class="users-table table">
    <!--Table head-->
    <thead class="">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Language</th>
            <th>Position</th>
            <th>Age</th>
            <th class="text-center">Last seen</th>
            <th>Actions</th>
        </tr>
    </thead>
    <!--Table head-->
    <!--Table body-->
    <tbody class="table-dark">
        <% users.each do |user| %>
        <tr>
            <th scope="row">
                <%= user.id %>
            </th>
            <td>
                <%= user.fullname %>
            </td>
            <td>
                <%= user.email %>
            </td>
            <td>
                <%= user.language.name %>
            </td>
            <td>
                <%= t("activities.#{user.main_activity.id}") %>
            </td>
            <td>
                <%= user.age %>
            </td>
            <td class="text-center">
                <%= user.last_sign_in_at ? l(user.last_sign_in_at, format: :short) : '-' %>
            </td>
            <td>
                <a href="<%= user_path(id: user.id) %>" class="text-info">
                    <i class="material-icons">person</i>
                </a>
            </td>
        </tr>
        <% end %>
    </tbody>
    <!--Table body-->
</table>
<div class="w-100">
    <div class="mx-sm-0 mx-md-auto">
        <%== pagy_bootstrap_nav(pagy) %>
    </div>
    <%#= pagy_bootstrap_nav_js(pagy) %>
    <%#= pagy_bootstrap_combo_nav_js(pagy) %>
    <%#= render partial: 'pagy/nav', locals: {pagy: pagy} %>
</div>
<!--Table-->
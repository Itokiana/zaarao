<div class="b-solid-transparent-1 py-5 makeResponse">
    <div class="page-header header-filter clear-filter purple-filter" data-parallax="true" style="background-image: url('/assets/tana.jpg');margin-bottom: 5%">
      <div class="container">
          <div class="row">
              <div class="col-md-12 ml-auto mr-auto">
                  <div class="brand">
                    <div class="container mt-15">
                      <div class="row">
                        <div class="edit-user col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 offset-md-3 offset-lg-3 offset-xl-3">
                          <div class="card text-center">
                            <%= form_with(model: current_user, url: edit_my_profile_path, data: { remote: false }) do |f| %>
                            <div class="card-header">
                              Edit profile
                            </div>
                            <div class="card-body">
                              <%= f.text_field :firstname, placeholder: t('activerecord.attributes.firstname'), class: "form-control" %>
                              <%= f.text_field :lastname, placeholder: t('activerecord.attributes.lastname'), class: "form-control" %>
                              <select id="user_language_id" name="user[language_id]" class="form-control">
                                <% @languages.each do |language| %>
                                <option value="<%= language.id %>"><%= language.name %></option>
                                <% end %>
                              </select>
                              <%= f.text_field :space, value: current_user.main_space.nil? ? "" : current_user.main_space.name, placeholder: "Choose your space", list: "spaces-list", class: "form-control", required: "" %>
                              <datalist id="spaces-list">
                                <% @spaces.each do |space| %>
                                <option value="<%= space.name %>"></option>
                                <% end %>
                              </datalist>
                            </div>
                            <div class="card-footer">
                              <%= f.submit "update", :disable_with => 'updating...', class: "btn btn-primary" %>
                            </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>

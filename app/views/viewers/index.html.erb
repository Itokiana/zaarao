<p id="notice"><%= notice %></p>

<h1>Viewers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Idea</th>
      <th>Survey</th>
      <th>Project</th>
      <th>Actuality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @viewers.each do |viewer| %>
      <tr>
        <td><%= viewer.user_id %></td>
        <td><%= viewer.idea_id %></td>
        <td><%= viewer.survey_id %></td>
        <td><%= viewer.project_id %></td>
        <td><%= viewer.actuality_id %></td>
        <td><%= link_to 'Show', viewer %></td>
        <td><%= link_to 'Edit', edit_viewer_path(viewer) %></td>
        <td><%= link_to 'Destroy', viewer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


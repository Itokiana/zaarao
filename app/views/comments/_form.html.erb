<%= form_with(model: comment, url: comment_path(id: comment.id, item_id: item.idea, item_type: item_type), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit t('helpers.submit.update', model: 'Comment'), class: "btn btn-success w-100" %>
  </div>
<% end %>
